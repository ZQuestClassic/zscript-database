global script DemoActiveScript
{
    void run()
    {
        Tango_Start();
        linkAlreadyTalking=false;
        
        while(true)
        {
            if(Link->Action==LA_SCROLLING)
                linkAlreadyTalking=false;
            
            Tango_Update1();
            Waitdraw();
            Tango_Update2();
            Waitframe();
        }
    }
}
